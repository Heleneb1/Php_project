{# templates/actor/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Détails de
	{{ actor.name }}
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<div class="row">
			<div class="col-md-8 offset-md-2">
				<div class="card">
					<div class="card-body">
						<h1 class="card-title">{{ actor.name }}</h1>
						<div class="col-md-4">
							{% if actor.picture %}
								<img src="{{ vich_uploader_asset(actor, 'pictureFile') }}" alt="{{ actor.name }}" class="img-fluid rounded-start">
							{% elseif actor.gender == 'female' %}
								<img src="{{ asset('uploads/images/female-actor.jpg') }}" class="card-img-top actor-image" alt="{{ actor.name }}">
							{% elseif actor.gender == 'male' %}
								<img src="{{ asset('uploads/images/male-actor.png') }}" class="card-img-top actor-image" alt="{{ actor.name }}">
							{% endif %}
						</div>

						<h2 class="card-subtitle mt-3">Séries associées :</h2>
						<ul class="list-group">
							{% for program in actor.programs %}
								<li class="list-group-item">
									<a href="{{ path('program_show', { slug: program.slug }) }}">{{ program.title }}</a>
								</li>
							{% else %}
								<li class="list-group-item">Aucune série associée.</li>
							{% endfor %}
						</ul>

						<a href="{{ path('app_actor_index') }}" class="btn btn-secondary mt-3">Retour à la liste des acteurs</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
