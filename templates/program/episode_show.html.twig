{% extends 'base.html.twig' %}

{% block title %}
	{{ program.title }}
	- Season
	{{ season.number }}
	-
	{{ episode.title }}
	Episode
	{{ episode.number }}
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="card">
			<div class="card-header">
				<h1 class="card-title">{{ program.title }}</h1>
				<h2 class="card-subtitle text-muted">Season
					{{ season.number }}</h2>
			</div>
			<div class="card-body">
				<h3 class="card-title">Episode
					{{ episode.number }}:
					{{ episode.title }}</h3>
				<div
					class="col-md-3">
					<!-- Ajouter l'image ici -->
					{% if episode.poster %}
						<img src="{{ vich_uploader_asset(episode, 'posterFile') }}" class="img-fluid" alt="{{episode.title}}">
					{% else %}
						<img src="{{ asset('uploads/images/episode-default.jpg') }}" class="img-fluid" alt="{{episode.title}}">
					{% endif %}
				</div>
				<p class="card-text">{{ episode.synopsis }}</p>
				<p class="card-text">Durée:
					{{ episode.duration }}
					minutes</p>
			</div>
			<div class="card-footer">
				<div class="d-grid gap-2 d-md-flex  display: flex flex:space-between">
					<a href="{{ path('program_show', { slug: program.slug }) }}" class="btn btn-outline-info mt-3">
						Retour à la série
					</a>
					<a href="{{ path('program_show_season', { programId: program.id, seasonId: season.id }) }}" class="btn btn-outline-info mt-3">
						Retour à la saison
					</a>
				</div>
			</div>

		</div>
	</div>
{% endblock %}
