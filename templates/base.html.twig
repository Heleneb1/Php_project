<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<meta
		name="description" content="{% block description %}Description par défaut du site{% endblock %}">

		<!-- Favicon -->
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 128 128'><text y='1.2em' font-size='96'>⚫️</text><text y='1.3em' x='0.2em' font-size='76' fill='%23fff'>sf</text></svg>">

		<!-- Bootstrap Icons -->
		<link
		rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

		<!-- Encore CSS -->
		{% block stylesheets %}
			{{ encore_entry_link_tags('global') }}
		{% endblock %}

		<!-- Turbo -->
		<script src="https://cdn.jsdelivr.net/npm/@hotwired/turbo@7.0.1/dist/turbo.min.js" defer></script>
		<script>
			document.addEventListener('turbo:submit-start', function (event) {
console.log('Form is being submitted via Turbo:', event.target);
});
		</script>
	</head>
	<body
		{{ stimulus_controller('theme') }} {{ stimulus_target('theme', 'body') }} data-turbo-suppress-warning>

		<!-- Header -->
		<header>
			{% include '_navbar.html.twig' %}
		</header>

		<!-- Main Content -->
		<div class="container">
			<div class="row">
				<main class="col-md-9">
					{% for category, messages in app.flashes %}
						{% for message in messages %}
							<div class="alert alert-{{ category }}">
								{{ message }}
							</div>
						{% endfor %}
					{% endfor %}

					{% block body %}{% endblock %}
				</main>

				<!-- Sidebar -->
				<aside class="col-md-3">
					{{ component('LastEpisode') }}
				</aside>
			</div>
		</div>

		<!-- Footer -->
		<footer class="mt-5">{% include '_footer.html.twig' %}
		</footer>

		<!-- JavaScript -->
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			{{ encore_entry_script_tags('global') }}

			<!-- Importmap -->
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</body>
</html>
