{% extends 'base.html.twig' %}

{% block title %}Season
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Season</h1>

		<table class="table">
			<tbody>
				<tr class="mb-3">
					<th class="mb-3">Id</th>
					<td>{{ season.id }}</td>
				</tr>
				<tr class="mb-3">
					<th class="mb-3">Number</th>
					<td>{{ season.number }}</td>
				</tr>
				{% if season.poster %}
					<tr class="mb-3">
						<th class="mb-3">Poster</th>
						<td>
							<img src="{{ vich_uploader_asset(season, 'posterFile') }}" alt="{{ season.number }}" class="img-fluid rounded-start">
						</td>
					</tr>
				{% endif %}
				<tr class="mb-3">
					<th class="mb-3">Year</th>
					<td>{{ season.year }}</td>
				</tr>
				<tr class="mb-3">
					<th class="mb-3">Description</th>
					<td>{{ season.description }}</td>
				</tr>
			</tbody>
		</table>

		<div class="d-flex justify-content-between mt-3">
			<a href="{{ path('app_season_index') }}" class="btn btn-secondary">Back to list</a>
			<a href="{{ path('app_season_edit', {'id': season.id}) }}" class="btn btn-secondary">Edit</a>
			<a href="{{ path('app_episode_new', {'seasonId': season.id}) }}" class="btn btn-primary">Add episode</a>
		</div>

		{{ include('season/_delete_form.html.twig') }}
	</div>
{% endblock %}
