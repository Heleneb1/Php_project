{% extends 'base.html.twig' %}

{% block title %}Edit Season
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="mb-4">Edit Season</h1>

		<div class="card">
			<div class="card-body">
				<input type="file" id="season_posterFile_file" name="season[posterFile][file]">

				{{ include('season/_form.html.twig', {'button_label': 'Update'}) }}
			</div>
		</div>

		<div class="mt-4">
			<a href="{{ path('app_season_index') }}" class="btn btn-secondary">Back to list</a>
		</div>

		<div class="mt-2">
			{{ include('season/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
